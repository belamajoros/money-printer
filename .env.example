# .env.example - Copy to .env and add your real values
# Never commit the actual .env file!

# Binance API Keys (Live Trading)
BINANCE_API_KEY=your_live_api_key_here
BINANCE_SECRET_KEY=your_live_secret_key_here

# Binance Testnet API Keys (For Testing)
BINANCE_API_KEY_TESTNET=your_testnet_api_key_here
BINANCE_SECRET_KEY_TESTNET=your_testnet_secret_key_here

# Discord Webhooks for Notifications
DISCORD_WEBHOOK_TRADERS=https://discord.com/api/webhooks/your_traders_webhook
DISCORD_WEBHOOK_TRAINERS=https://discord.com/api/webhooks/your_trainers_webhook

# Production Settings
LIVE_TRADING=false
MAX_DAILY_TRADES=50
MAX_HOURLY_TRADES=10
BOT_MAX_LOSS_PERCENT=20.0
ENABLE_PROFIT_REINVESTMENT=false
REINVESTMENT_PERCENT=50.0

# Safety Limits
MIN_MODEL_WINRATE=50.0
MAX_POSITION_SIZE_PERCENT=5.0
WEBSOCKET_TIMEOUT_MINUTES=10
API_RETRY_DELAY_SECONDS=30

# Maintenance
AUTO_PRUNE_LOGS_DAYS=30
MIN_FREE_DISK_GB=5.0

# Railway Usage Monitoring (Production Deployment)
RAILWAY_API_TOKEN=your_railway_api_token_here
RAILWAY_PROJECT_ID=your_railway_project_id_here
RAILWAY_MAX_USAGE_HOURS=450
RAILWAY_WARNING_HOURS=400
RAILWAY_CHECK_INTERVAL=5

# Google Drive Integration (Data Backup)
USE_GOOGLE_DRIVE=false
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_USER_ID=your_discord_user_id_here
